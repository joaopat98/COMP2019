{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Lex",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "command": "flex",
            "args": [
                "gocompiler.l"
            ]
        },
        {
            "label": "Compile Yacc",
            "dependsOn": "Compile Lex",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "command": "yacc",
            "args": [
                "-d",
                "gocompiler.y"
            ]
        },
        {
            "label": "Compile Binary",
            "dependsOn": "Compile Yacc",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "command": "clang",
            "args": [
                "-g",
                "-o",
                "../.bin/main",
                "*.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}