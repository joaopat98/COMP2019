{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Lex",
            "type": "shell",
            "command": "flex",
            "args": [
                "-o",
                ".bin/yy.lex.c",
                "src/gocompiler.l"
            ]
        },
        {
            "label": "Compile Yacc",
            "dependsOn": "Compile Lex",
            "type": "shell",
            "command": "yacc",
            "args": [
                "-d",
                "-o",
                ".bin/y.tab.c",
                "src/gocompiler.y"
            ]
        },
        {
            "label": "Compile Binary",
            "dependsOn": "Compile Yacc",
            "type": "shell",
            "command": "clang",
            "args": [
                "-g",
                "-o",
                ".bin/main",
                ".bin/y.tab.c",
                ".bin/yy.lex.c",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}