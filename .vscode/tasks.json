{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Lex",
            "type": "shell",
            "command": "flex",
            "args": [
                "-o",
                ".bin/lex.yy.c",
                "src/token_analyser.l"
            ]
        },
        {
            "label": "Compile Lex C",
            "type": "shell",
            "command": "clang",
            "args": [
                ".bin/lex.yy.c",
                "-o",
                ".bin/main.o"
            ]
        },
        {
            "label": "Build",
            "dependsOn": [
                "Compile Lex",
                "Compile Lex C"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}